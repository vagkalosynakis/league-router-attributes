{
    "name": "vagkalosynakis/league-router-attributes",
    "description": "Attribute-based routing for league/route (PHP 8+)",
    "keywords": [
        "php",
        "routing",
        "attributes",
        "league",
        "route",
        "php8",
        "router",
        "annotations"
    ],
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Vaggelis Kalosynakis",
            "email": "vagkalosynakis@gmail.com"
        }
    ],
    "require": {
        "php": "^8.0",
        "league/route": "^5.1",
        "psr/container": "^1.0|^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpstan/phpstan": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "VagKalosynakis\\LeagueRouteAttributes\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VagKalosynakis\\LeagueRouteAttributes\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
